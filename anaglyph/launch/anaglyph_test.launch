<launch>
    <include file="$(find uvc_camera)/launch/stereo_node.launch" />

    <node name="converter" pkg="anaglyph" type="anaglyph_converter" >
    	<param name="publish_topic" value="anaglyph_images" />
 	<param name="left_image_topic" value="/left/image_raw" />
	<param name="right_image_topic" value="/right/image_raw" />
    </node>

    <remap from="image" to="anaglyph_images" /> 
    <remap from="left_images" to="/left/image_raw" />
    <remap from="right_images" to="/right/image_raw" />
    <node name="anaglyph_viewer" pkg="image_view" type="image_view" >
    </node>
</launch>
